<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ebook.mapper.UserMapper">

    <select id="selectUserById" resultType="UserDTO">
        SELECT * FROM `user` WHERE user_id = #{id}
    </select>
    <select id="selectUserByCi" resultType="UserDTO">
        SELECT * FROM `user` WHERE user_ci = #{ci}
    </select>
    <select id="selectCustomUserById" resultType="com.ebook.dto.user.CustomUserDTO">
        SELECT * FROM `custom_user` WHERE id = #{id}
    </select>
    <select id="selectUserByNameAndEmail" resultType="UserDTO">
        SELECT * FROM `user` WHERE user_name = #{name} OR user_email = #{email}
    </select>
    <select id="selectUserByIdAndEmail" resultType="UserDTO">
        SELECT * FROM `user` WHERE user_id = #{id} AND user_name = #{name} AND user_email = #{email}
    </select>

    <insert id="insertUser">
        INSERT INTO `user`
        VALUES
        (#{id}, #{ci}, #{password}, #{email}, #{name}, #{nickname}, #{profileImage.data}, #{cash})
    </insert>

    <insert id="insertSocialUser">
        INSERT INTO `custom_user` VALUES (#{id}, #{ci}, #{name}, #{email}, #{nickName}, #{profileImageUrl})
    </insert>

</mapper>