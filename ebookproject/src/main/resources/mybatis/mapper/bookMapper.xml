<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ebook.mapper.BookMapper">
    <resultMap id="findAllBooksWithImages" type="BookDTO" autoMapping="true">
        <id property="no" column="no"/>
        <association property="bookImage" javaType="FileDTO">
            <id property="data" column="book_image" />
        </association>
    </resultMap>

    <select id="findAllBooks" resultMap="findAllBooksWithImages">
        SELECT * FROM books
    </select>
</mapper>
